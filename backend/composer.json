{
    "name": "3dprint-pro/backend",
    "description": "3D Print Pro Backend API",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage --coverage-text",
        "test:filter": "phpunit --filter",
        "start": "php -S localhost:8080 -t public"
    }
}
